dn: olcDatabase={2}hdb,cn=config
changetype: modify
replace: olcSuffix
olcSuffix: {{ base_root }}

dn: olcDatabase={2}hdb,cn=config
changetype: modify
replace: olcRootDN
olcRootDN: {{ bind_user | default('cn=admin'+base_root) }}

dn: olcDatabase={2}hdb,cn=config
changetype: modify
replace: olcRootPW
olcRootPW: {{ bind_password_hash.stdout }}

dn: olcDatabase={2}hdb,cn=config
changetype: modify
add: olcAccess
olcAccess: {0}to dn.sub="{{ base_users }}
  by self write
  by * read
  by anonymous auth
  by dn="cn=pwm-admin,{{ base_users }}" write
